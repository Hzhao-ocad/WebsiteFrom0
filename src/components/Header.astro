// src/components/Header.astro
---
<header class="main-header">
  <div class="header-container">
    <a href="/" class="logo">HARRY ZHAO</a>
    <nav>
      <a href="/">Home</a>
      <a href="/works">Works</a>
      <a href="/about">About</a>
      <a href="/contact">Contact</a>
    </nav>
  </div>
</header>

<style>
  .main-header {
    position:absolute;
    top:0;
    z-index: 10;
    width: 100%;
    background: rgba(15, 23, 42, 0.9); /* Matches your bg1 color */
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    /* No position: fixed here makes it a "normal box" */
  }

  .header-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0.75rem 1.125rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    font-weight: bold;
    letter-spacing: 2px;
    text-decoration: none;
    color: white;
  }

  nav {
    display: flex;
    gap: 2rem;
  }

  nav a {
    text-decoration: none;
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.9rem;
    transition: color 0.2s;
  }

  nav a:hover {
    color: white;
  }

  @media (max-width: 768px) {
  .header-container {
    /* Reduce padding so the logo and nav have more room */
    padding: 0.75rem 0.5rem;
  }

  .logo {
    font-size: 0.85rem; /* Shrink logo slightly */
    letter-spacing: 1px;
  }

  nav {
    /* Reduce the gap between links significantly */
    gap: 0.75rem; 
  }

  nav a {
    font-size: 0.8rem; /* Smaller font for links */
  }
}

/* VERY IMPORTANT: Add this to prevent the header from expanding the page */
.main-header {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  box-sizing: border-box; /* Ensures padding doesn't add to width */
}
</style>