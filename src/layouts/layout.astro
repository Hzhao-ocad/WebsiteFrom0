---
import Header from '../components/Header.astro';
export interface Props {
  title?: string
}
export let title: string = "My Page"

---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display:ital@0;1&display=swap" rel="stylesheet">.

    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <style>
      :root { --bg1: #0f172a; --bg2: #1e293b; --fg: #e6eef8; --heading-font: "DM Serif Display", serif;}
      html, body { height: 100%; margin: 0; }
      /* Apply the new font only to headings */
      h1, h2, h3, .section-heading {
        font-family: var(--heading-font);
        font-weight: 400; /* DM Serif Display usually only has weight 400 */
      }
      body {
        min-height: 100vh;
        display: block;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
        background: linear-gradient(135deg, var(--bg1), var(--bg2));
        color: var(--fg);
        font-family: system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
      }
      .container {
        text-align: center;
        padding: 2rem;
        border-radius: 12px;
        background: rgba(255,255,255,0.03);
        box-shadow: 0 6px 24px rgba(2,6,23,0.6);
        backdrop-filter: blur(6px);
        max-width: 880px;
        width: 90%;
      }
      h1 { margin: 0 0 0.5rem 0; font-size: clamp(1.5rem, 4vw, 2.5rem); }
      p { margin: 0; opacity: 0.9; }
    </style>
  </head>
  <body>
    <Header />
    
    <main>
      <slot /> </main>
  </body>
</html>
