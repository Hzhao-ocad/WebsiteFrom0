---
import Layout from "../layouts/layout.astro";
const title = "About - Harry Zhao";
---

<Layout title={title}>
  <!-- Page Header -->
  <section class="page-header">
    <div class="container">
      <h1>About</h1>
    </div>
  </section>

  <!-- About Content -->
  <section class="about-section">
    <div class="about-container">
      
      <!-- Profile Image (optional - you can add your photo) -->
      <div class="profile-image-wrapper">
        <div class="profile-placeholder">
          <!-- Replace with your image: <img src="/images/about/profile.jpg" alt="Harry Zhao" class="profile-image" /> -->
          <span class="profile-initials">HZ</span>
        </div>
      </div>

      <!-- Bio -->
      <div class="bio">
        <h2 class="bio-title">Harry Zhao</h2>
        <p class="bio-subtitle">Digital Media | Physical Computing | Interactive Design</p>
        
        <div class="bio-text">
          <p>
            Harry Zhao is a multi-media artist specializing in physical computing, interactive design and digital media. He explores the boundaries between the material world and digital spaces.
          </p>
          <br>
          <p>
            His work spans across various mediums including animation, interactive installations, 
            ,digital art and mixed media. 
          </p>
          <br>
          <p>
            Harry is currently based in Toronto, Canada, pursuing MFA in Digital Futures at OCAD University.
          </p>
        </div>
      </div>

    </div>
  </section>

  <!-- Education / Experience (optional section) -->
  <section class="experience-section">
    <div class="container">
      <h2 class="section-title">Education</h2>
      
      <div class="experience-list">
        <div class="experience-item">
          <div class="experience-details">
            <h3>Schoolf of the Art Insititude of Chicago (SAIC)</h3>
            <p>BFA in Fine Arts with an emphasis in Art and Technology</p>
            <div class="experience-date">2019 - 2024</div>
          </div>
          <div class="experience-details">
            <h3>Ontario College of Art and Design University (OCAD U)</h3>
            <p>MFA in Digital Futures</p>
            <div class="experience-date">2024 - Present</div>
          </div>
        </div>
        
        <!-- Add more education/experience items as needed -->
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Page Header */
  .page-header {
    padding: 4rem 2rem 2rem;
    text-align: center;
    background: rgba(255,255,255,0.02);
  }

  .page-header h1 {
    font-size: 2.5rem;
    font-weight: 300;
    margin: 0;
  }

  /* About Section */
  .about-section {
    padding: 3rem 2rem;
  }

  .about-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
    max-width: 800px;
    margin: 0 auto;
  }

  /* Profile Image */
  .profile-image-wrapper {
    flex-shrink: 0;
  }

  .profile-placeholder {
    width: 180px;
    height: 180px;
    border-radius: 50%;
    background: rgba(255,255,255,0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    border: 3px solid rgba(255,255,255,0.2);
  }

  .profile-initials {
    font-size: 3rem;
    font-weight: 300;
    color: rgba(255,255,255,0.6);
  }

  .profile-image {
    width: 180px;
    height: 180px;
    border-radius: 50%;
    object-fit: cover;
    border: 3px solid rgba(255,255,255,0.2);
  }

  /* Bio */
  .bio {
    text-align: center;
  }

  .bio-title {
    font-size: 1.75rem;
    font-weight: 400;
    margin: 0 0 0.5rem 0;
  }

  .bio-subtitle {
    font-size: 1rem;
    color: rgba(255,255,255,0.6);
    margin: 0 0 1.5rem 0;
  }

  .bio-text p {
    
    font-size: 1.05rem;
    line-height: 1.8;
    color: rgba(255,255,255,0.85);
    margin-bottom: 1rem;
    text-align: center;
  }

  /* Skills Section */
  .skills-section {
    padding: 3rem 2rem;
    background: rgba(255,255,255,0.02);
  }

  .section-title {
    font-size: 2.25rem;
    font-weight: 400;
    text-align: center;
    margin-bottom: 2rem;
    font-family: "DM Serif Display", serif; 
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
    max-width: 1000px;
    margin: 0 auto;
  }

  @media (max-width: 900px) {
    .skills-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 500px) {
    .skills-grid {
      grid-template-columns: 1fr;
    }
  }

  .skill-category {
    background: rgba(255,255,255,0.03);
    padding: 1.5rem;
    border-radius: 12px;
  }

  .skill-category h3 {
    font-size: 1rem;
    font-weight: 500;
    margin: 0 0 1rem 0;
    color: rgba(255,255,255,0.9);
  }

  .skill-category ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .skill-category li {
    font-size: 0.9rem;
    color: rgba(255,255,255,0.7);
    padding: 0.4rem 0;
    border-bottom: 1px solid rgba(255,255,255,0.05);
  }

  .skill-category li:last-child {
    border-bottom: none;
  }

  /* Experience Section */
  .experience-section {
    padding: 3rem 2rem;
  }

  .experience-list {
    max-width: 600px;
    margin: 0 auto;
  }

  .experience-item {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 1.5rem 0;
    border-bottom: 1px solid rgba(255,255,255,0.1);
  }

  .experience-date {
    font-size: 0.85rem;
    color: rgba(255,255,255,0.5);
    min-width: 120px;
  }

  .experience-details h3 {
    font-size: 1.1rem;
    font-weight: 500;
    margin: 0 0 0.25rem 0;
  }

  .experience-details p {
    font-size: 0.95rem;
    color: rgba(255,255,255,0.7);
    margin: 0;
  }

  /* CTA Section */
  .cta-section {
    padding: 4rem 2rem;
    text-align: center;
    background: rgba(255,255,255,0.02);
  }

  .cta-section h2 {
    font-size: 1.75rem;
    font-weight: 400;
    margin: 0 0 0.5rem 0;
  }

  .cta-section p {
    background: rgba(255,255,255,0.02);
    margin: 0 0 1.5rem 0;
  }

  .cta-button {
    display: inline-block;
    padding: 0.75rem 2rem;
    background: rgba(255,255,255,0.02);
    color: white;
    text-decoration: none;
    border-radius: 8px;
    font-size: 1rem;
    transition: background 0.2s ease;
  }

  .cta-button:hover {
    background: rgba(255,255,255,0.2);
  }

  /* Responsive */
  @media (max-width: 600px) {
    .experience-item {
      flex-direction: column;
      gap: 0.5rem;
    }

    .experience-date {
      min-width: auto;
    }
  }
</style>
