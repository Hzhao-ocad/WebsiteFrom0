---
import Layout from "../layouts/layout.astro";
const title = "Harry Zhao";

const { imagePath } = Astro.props;

import { getCollection } from 'astro:content';

// 过滤出 isFeatured 为 true 的作品
const featuredWorks = await getCollection('works', ({ data }) => {
  return data.isFeatured === true;
});
const top6FeaturedWorks = featuredWorks.sort(() => Math.random() - 0.5).slice(0, 8);

// 可以在这里设置默认值，防止没传参数时出错
const bgImage = imagePath || '/images/work/moomoocow/moomoocow_1.png';
---

<Layout title={title}>
  <section class="full-section img-bg" style={{ "--bg-url": `url('/images/work/moomoocow/moomoocow_1.png')` }}>
    <div class="content-wrapper container">
      <div class="hero">
        <h1>{title}</h1>
        <p class="hero-subtitle">Digital Media | Interactive Design</p>
      </div>
    </div>
  </section>

  <section class="full-section section black-bg" style={{ "--bg-color": `url('/images/work/moomoocow/moomoocow_2.png')` }}>

    <div class="card-wrapper">   
      {top6FeaturedWorks.map(work => (
      <a href={`/works/${work.id}`} class="card">
        <img src={work.data.coverImage} alt={work.data.title} class="card_image"/>
        <video width="600" muted loop autoplay preload="none">
          <source src={work.data.previewWebm} type="video/webm" />
        </video>
        <h3 class="card-info">{work.data.title}</h3>
      </a>
      ))}
    </div>

  </section>


  <section class="full-section section short-section">
    <div class="container">
      <h2 class="section-heading">About</h2>
      <p class="about-text">Hello! I'm Harry Zhao, a creative technologist specializing in digital media and physical computing. I love blending art and technology to create immersive experiences. Welcome to my portfolio!</p>
    </div>
  </section>
</Layout>

<style>
.card-wrapper {
  display: grid;
  grid-template-rows: auto;
  grid-template-columns: repeat(4, 1fr);
  width: 100%;
}

@media (max-width: 768px) {
  .card-wrapper {
    /* 2 columns for mobile */
    grid-template-columns: repeat(2, 1fr);
  }
  .full-section {
    min-height:0;
  }
}

.card {
  position:relative;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  width:  auto;
  height: auto;
  aspect-ratio: 1 / 1;
  overflow: hidden;
  }
  
.card_image
{
  width: auto;
  height: 100%;
  object-fit: cover;

}

.card video{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.card:hover video{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  opacity: 1;
  transition: opacity 0.3s ease;
}
  
.card-info {
  position: absolute;
  bottom: 0;
  margin-bottom: 0;
  align-items: bottom;
  width: 100%;
  text-align: right;
  color: white;
  background: linear-gradient(transparent, rgba(0,0,0,0.8));
  opacity: 0;
  
  transform: translateY(30px); 
  transition: all 0.3s ease;

}
.card:hover .card-info{
  opacity: 1;
  transform: translateY(0);
}

  .img-bg {
    background: var(--bg-url) center / cover no-repeat; 
    min-width: 100vw;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
  }
  .black-bg{
	background-color: var(--bg-color);
  }
  .full-section {
    position: relative;
    height: auto;
    min-height: 100vh;
	  width: 100%;
    display: flex;
    align-items: flex-start;
    justify-content: flex-start;
    flex-direction: column;
  }
  .short-section {
    min-height: 50vh;
  }
  .content-wrapper {
    position: relative;
    align-items: center;
    justify-content: center;
    display: flex;
    flex: 1;
    width: 100%;
  }

  .section {
	color: var(--fg);
  }
  .about-text { 
    padding: 0 10rem 0 10rem;
    
  }
  .projects { background: rgba(255,255,255,0.01); }
  .contact { background: rgba(255,255,255,0.015); }

  .hero {
    text-align: center;
    font-family: "DM Serif Display", serif;
    font-size: 2rem;
  }

  .hero h1 {
    font-weight: 300;
    margin-bottom: var(--spacing-sm);
    text-shadow: 0 2px 10px rgba(0,0,0,0.8);
  }

  .hero-subtitle {
    font-size: 1.25rem;
    letter-spacing: 0.05em;
    margin-left: auto; 
    margin-right: auto;
    text-shadow: 0 2px 10px rgba(0,0,0,0.8);
  }

  .section-heading { 
    margin:0 0.75rem 0; 
    font-size: 3rem; 
    font-family: "DM Serif Display", serif; 
    display:flex;
    justify-content: center;
    align-items: flex-start;
    margin-top: 5rem;
    margin-bottom: 5rem;
  }
  .muted {
    color: rgba(255,255,255,0.4);
  }

  ul { text-align: left; max-width: 560px; margin: 0 auto; }


  .section-title {
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text-muted);
    margin-bottom: var(--spacing-md);
    text-shadow: 0 2px 4px rgba(0,0,0,0.8);
  }

</style>
