---
import Layout from "../../layouts/layout.astro";
import { getCollection, render } from 'astro:content';
import { Image } from 'astro:assets';

// Generate static paths for all works
export async function getStaticPaths() {
  const works = await getCollection('works');
  return works.map(work => ({
    params: { slug: work.id || work.slug },
    props: { work },
  }));
}

const { work } = Astro.props;
const { Content } = await render(work);

const title = `${work.data.title} - Harry Zhao`;
const formattedDate = new Date(work.data.publishDate).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<Layout title={title}>
  <!-- Back Link -->
  <div class="back-link-wrapper">
    <a href="/works" class="back-link">‚Üê Back to Works</a>
  </div>

  <!-- Work Header -->
  <section class="work-header">
    <div class="container">
      <h1 class="work-title">{work.data.title}</h1>
      <p class="work-description">{work.data.description}</p>
      <div class="work-meta">
        <span class="work-date">{formattedDate}</span>
        <div class="work-tags">
          {work.data.tags.map(tag => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Cover Image -->
  <section class="cover-section">
    <div class="cover-wrapper">
      <Image src={work.data.coverImage} alt={work.data.title} class="cover-image" />
    </div>
  </section>

  <!-- Video Embed (if available) -->
  {work.data.videoUrl && (
    <section class="video-section">
      <div class="container">
        <h2 class="section-title">Video</h2>
        <div class="video-wrapper">
          <iframe 
            src={work.data.videoUrl.replace('watch?v=', 'embed/')} 
            title={work.data.title}
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen>
          </iframe>
        </div>
      </div>
    </section>
  )}

  <!-- Gallery Images (if available) -->
  {work.data.galleryImages && work.data.galleryImages.length > 0 && (
    <section class="gallery-section">
      <div class="container">
        <h2 class="section-title">Gallery</h2>
        <div class="gallery-grid">
          {work.data.galleryImages.map((img, index) => (
            <div class="gallery-item">
              <Image src={img} alt={`${work.data.title} - Image ${index + 1}`} class="gallery-image" />
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Markdown Content -->
  <section class="content-section">
    <div class="container prose">
      <Content />
    </div>
  </section>
</Layout>

<style>
  /* Back Link */
  .back-link-wrapper {
    padding: 1.5rem 2rem;
  }

  .back-link {
    color: rgba(255,255,255,0.6);
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: rgba(255,255,255,1);
  }

  /* Work Header */
  .work-header {
    padding: 2rem;
    text-align: center;
  }

  .work-title {
    font-size: 2.5rem;
    font-weight: 300;
    margin-bottom: 1rem;
  }

  .work-description {
    font-size: 1.2rem;
    color: rgba(255,255,255,0.7);
    max-width: 700px;
    margin: 0 auto 1.5rem;
    line-height: 1.6;
  }

  .work-meta {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }

  .work-date {
    font-size: 0.9rem;
    color: rgba(255,255,255,0.5);
  }

  .work-tags {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.5rem;
  }

  .tag {
    font-size: 0.8rem;
    padding: 0.3rem 0.75rem;
    background: rgba(255,255,255,0.1);
    border-radius: 4px;
    color: rgba(255,255,255,0.8);
  }

  /* Cover Section */
  .cover-section {
    padding: 0 2rem 2rem;
  }

  .cover-wrapper {
    max-width: 1200px;
    margin: 0 auto;
    border-radius: 12px;
    overflow: hidden;
  }

  .cover-image {
    width: 100%;
    height: auto;
    display: block;
  }

  /* Video Section */
  .video-section {
    padding: 2rem;
  }

  .section-title {
    font-size: 1.5rem;
    font-weight: 400;
    margin-bottom: 1.5rem;
    text-align: center;
  }

  .video-wrapper {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 aspect ratio */
    height: 0;
    max-width: 900px;
    margin: 0 auto;
    border-radius: 12px;
    overflow: hidden;
    background: rgba(0,0,0,0.3);
  }

  .video-wrapper iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  /* Gallery Section */
  .gallery-section {
    padding: 2rem;
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .gallery-item {
    border-radius: 8px;
    overflow: hidden;
    background: rgba(255,255,255,0.03);
  }

  .gallery-image {
    width: 100%;
    height: auto;
    display: block;
    transition: transform 0.3s ease;
  }

  .gallery-item:hover .gallery-image {
    transform: scale(1.03);
  }

  /* Content Section (Markdown) */
  .content-section {
    padding: 2rem;
  }

  .prose {
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.8;
    font-size: 1.05rem;
  }

  .prose :global(h2) {
    font-size: 1.5rem;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .prose :global(h3) {
    font-size: 1.25rem;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }

  .prose :global(p) {
    margin-bottom: 1rem;
    color: rgba(255,255,255,0.85);
  }

  .prose :global(ul), .prose :global(ol) {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }

  .prose :global(li) {
    margin-bottom: 0.5rem;
    color: rgba(255,255,255,0.85);
  }

  .prose :global(a) {
    color: #60a5fa;
    text-decoration: underline;
  }

  .prose :global(a:hover) {
    color: #93c5fd;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .work-title {
      font-size: 1.8rem;
    }

    .work-description {
      font-size: 1rem;
    }

    .gallery-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
