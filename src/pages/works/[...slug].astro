---
import Layout from "../../layouts/layout.astro";
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const works = await getCollection('works');
  return works.map(work => ({
    params: { slug: work.id },
    props: { work },
  }));
}

const { work } = Astro.props;
const { Content } = await render(work);
const title = `${work.data.title} - Harry Zhao`;
const firstImage = work.data.galleryImages?.[0] || work.data.coverImage;
const galleryImages = work.data.galleryImages || [];
const detailDescriptions = work.data.detailDescription || [];
const maxItems = Math.max(galleryImages.length, detailDescriptions.length);
---

<Layout title={title}>
  <!-- Hero Section with Blurred Background -->
  <section class="hero-section" style={`background-image: url('${firstImage}');`}>
    <div class="hero-overlay"></div>
    <h1 class="hero-title">{work.data.title}</h1>
    
    <!-- Video or Image + Description - visually inside hero -->
    {work.data.videoUrl? (
      <div class="video-container">
        <div class="video-wrapper">
          <iframe 
            src={work.data.videoUrl.replace('watch?v=', 'embed/')} 
            title={work.data.title}
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen>
          </iframe>
        </div>
      </div>
    ) : (
      <div class="hero-content">
        {galleryImages[0] && (
          <div class="video-container">
            <img src={galleryImages[0]} alt={work.data.title} class="hero-image" />
          </div>
        )}
        {work.data.heroDescription && (
          <div class="hero-text-container">
            <p class="hero-description">{work.data.heroDescription}</p>
          </div>
        )}
      </div>
    )}
  </section>

  <!-- Interleaved Content: Descriptions and Gallery Images -->
  {Array.from({ length: maxItems }).map((_, index) => (
    <>
      {detailDescriptions[index] && (
        <section class="content-section">
          <div class="content-container">
            <p>{detailDescriptions[index]}</p>
          </div>
        </section>
      )}
      {galleryImages[index] && (
        <section class="fullwidth-image-section">
          <img src={galleryImages[index]} alt={`${work.data.title} - Image ${index + 1}`} class="fullwidth-image" />
        </section>
      )}
    </>
  ))}
</Layout>

<style>
  /* Hero Section */
  .hero-section {
    position: relative;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    padding-top: 15vh;
    background-size: auto;
    background-position: center;
    background-repeat: repeat;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    backdrop-filter: blur(6px);
    -webkit-backdrop-filter: blur(6px);
    background: rgba(0, 0, 0, 0.4);
  }

  .hero-title {
    position: relative;
    z-index: 1;
    font-size: 4rem;
    font-weight: 300;
    text-align: center;
    color: white;
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.5);
  }

  /* Video Container - inside hero */
  .video-container {
    position: relative;
    z-index: 2;
    width: 65vw;
    max-width: 1000px;
    margin-top: 5vh;
  }

  .video-wrapper {
    position: relative;
    padding-bottom: 56.25%;
  }

  .video-wrapper iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    width: 65vw;
    max-width: 1000px;
    margin-top: 5vh;
    display: flex;
    flex-direction: column;
    gap: 3vh;
  }

  .hero-image {
    width: 100%;
    height: auto;
    display: block;
  }

  .hero-text-container {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-description {
    font-size: 1.5rem;
    line-height: 1.8;
    color: white;
    text-align: center;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
  }

  /* Full Width Image Section */
  .fullwidth-image-section {
    width: 100%;
    display: flex;
    justify-content: center;
  }

  .fullwidth-image {
    width: 85%;
    max-width: 1200px;
    height: auto;
    display: block;
  }

  /* Content Section */
  .content-section {
  }

  .content-container {
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.8;
    font-size: 1.1rem;
  }

  .content-container :global(h2) {
    font-size: 2rem;
    font-weight: 400;
    margin-top: 3rem;
    margin-bottom: 1.5rem;
  }

  .content-container :global(h3) {
    font-size: 1.5rem;
    font-weight: 400;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .content-container :global(p) {
    margin-bottom: 1.5rem;
    color: rgba(255, 255, 255, 0.9);
  }

  .content-container :global(ul),
  .content-container :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
  }

  .content-container :global(li) {
    margin-bottom: 0.75rem;
    color: rgba(255, 255, 255, 0.9);
  }

  .content-container :global(a) {
    color: #60a5fa;
    text-decoration: underline;
    transition: color 0.2s ease;
  }

  .content-container :global(a:hover) {
    color: #93c5fd;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .hero-title {
      font-size: 2.5rem;
    }

    .video-container {
      width: 90vw;
    }

    .hero-content {
      width: 90vw;
    }

    .hero-description {
      font-size: 1.2rem;
    }

    .content-container {
      font-size: 1rem;
    }

    .content-container :global(h2) {
      font-size: 1.5rem;
    }

    .content-container :global(h3) {
      font-size: 1.25rem;
    }

    .fullwidth-image {
      width: 100%;
    }
  }
</style>
