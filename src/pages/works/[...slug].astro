---
import Layout from "../../layouts/layout.astro";
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const works = await getCollection('works');
  return works.map(work => ({
    params: { slug: work.id },
    props: { work },
  }));
}

const { work } = Astro.props;
const { Content } = await render(work);
const title = `${work.data.title} - Harry Zhao`;
const firstImage = work.data.galleryImages?.[0] || work.data.coverImage;
const secondImage = work.data.galleryImages?.[1];
---

<Layout title={title}>
  <!-- Hero Section with Blurred Background -->
  <section class="hero-section" style={`background-image: url('${firstImage}');`}>
    <div class="hero-overlay"></div>
    <h1 class="hero-title">{work.data.title}</h1>
  </section>

  <!-- Video Section -->
  {work.data.videoUrl && (
    <section class="video-section">
      <div class="video-wrapper">
        <iframe 
          src={work.data.videoUrl.replace('watch?v=', 'embed/')} 
          title={work.data.title}
          frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen>
        </iframe>
      </div>
    </section>
  )}

  <!-- Full Width Image Section -->
  {secondImage && (
    <section class="fullwidth-image-section">
      <img src={secondImage} alt={work.data.title} class="fullwidth-image" />
    </section>
  )}

  <!-- Text Content Section -->
  <section class="content-section">
    <div class="content-container">
      <Content />
    </div>
  </section>
</Layout>

<style>
  /* Hero Section */
  .hero-section {
    position: relative;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    background: rgba(0, 0, 0, 0.4);
  }

  .hero-title {
    position: relative;
    z-index: 1;
    font-size: 4rem;
    font-weight: 300;
    text-align: center;
    color: white;
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.5);
    padding: 0 2rem;
  }

  /* Video Section */
  .video-section {
    padding: 4rem 2rem;
    background: rgba(0, 0, 0, 0.2);
  }

  .video-wrapper {
    position: relative;
    padding-bottom: 56.25%;
    height: 0;
    max-width: 1200px;
    margin: 0 auto;
    border-radius: 12px;
    overflow: hidden;
    background: rgba(0, 0, 0, 0.5);
  }

  .video-wrapper iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  /* Full Width Image Section */
  .fullwidth-image-section {
    width: 100%;
    overflow: hidden;
  }

  .fullwidth-image {
    width: 100%;
    height: auto;
    display: block;
  }

  /* Content Section */
  .content-section {
    padding: 4rem 2rem;
  }

  .content-container {
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.8;
    font-size: 1.1rem;
  }

  .content-container :global(h2) {
    font-size: 2rem;
    font-weight: 400;
    margin-top: 3rem;
    margin-bottom: 1.5rem;
  }

  .content-container :global(h3) {
    font-size: 1.5rem;
    font-weight: 400;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .content-container :global(p) {
    margin-bottom: 1.5rem;
    color: rgba(255, 255, 255, 0.9);
  }

  .content-container :global(ul),
  .content-container :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
  }

  .content-container :global(li) {
    margin-bottom: 0.75rem;
    color: rgba(255, 255, 255, 0.9);
  }

  .content-container :global(a) {
    color: #60a5fa;
    text-decoration: underline;
    transition: color 0.2s ease;
  }

  .content-container :global(a:hover) {
    color: #93c5fd;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .hero-title {
      font-size: 2.5rem;
    }

    .video-section {
      padding: 2rem 1rem;
    }

    .content-section {
      padding: 2rem 1rem;
    }

    .content-container {
      font-size: 1rem;
    }

    .content-container :global(h2) {
      font-size: 1.5rem;
    }

    .content-container :global(h3) {
      font-size: 1.25rem;
    }
  }
</style>
