---
import Layout from "../../layouts/layout.astro";
import { getCollection } from 'astro:content';

const title = "All Works - Harry Zhao";

// Get all works, sorted by publish date (newest first)
const allWorks = await getCollection('works');
const sortedWorks = allWorks.sort((a, b) => 
  new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime()
);
---

<Layout title={title}>
  <!-- Page Header -->
  <section class="page-header">
    <div class="container">
      <h1>All Works</h1>
      <p class="page-subtitle">A collection of my projects and creative work</p>
    </div>
  </section>

  <!-- Works Grid -->
  <section class="works-section">
    <div class="works-grid">
      {sortedWorks.map(work => (
        <a href={`/works/${work.id}`} class="work-card">
          <div class="work-image-wrapper">
            <img src={work.data.coverImage} alt={work.data.title} class="work-image" />
            {work.data.previewWebm && (
              <video width="600" muted loop autoplay preload="none">
                <source src={work.data.previewWebm} type="video/webm" />
              </video>
            )}
          </div>
          <div class="work-info">
            <h3 class="work-title">{work.data.title}</h3>
            <p class="work-description">{work.data.description}</p>
            <div class="work-tags">
              {work.data.tags.map(tag => (
                <span class="tag">{tag}</span>
              ))}
            </div>
          </div>
        </a>
      ))}
    </div>
  </section>
</Layout>

<style>
  /* Page Header */
  .page-header {
    padding: 4rem 2rem 2rem;
    text-align: center;
    background: rgba(255,255,255,0.02);
  }

  .page-header h1 {
    font-size: 2.5rem;
    font-weight: 300;
    margin-bottom: 0.5rem;
  }

  .page-subtitle {
    color: rgba(255,255,255,0.6);
    font-size: 1.1rem;
  }

  /* Works Section */
  .works-section {
    padding: 2rem;
    width: 100%;
    box-sizing: border-box;
  }

  .works-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    max-width: 1400px;
    margin: 0 auto;
  }

  /* Responsive: 2 columns on tablet, 1 on mobile */
  @media (max-width: 1024px) {
    .works-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 600px) {
    .works-grid {
      grid-template-columns: 1fr;
    }
  }

  /* Work Card */
  .work-card {
    display: block;
    text-decoration: none;
    color: inherit;
    background: rgba(255,255,255,0.03);
    border-radius: 12px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .work-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0,0,0,0.4);
  }

  /* Image Wrapper */
  .work-image-wrapper {
    position: relative;
    width: 100%;
    aspect-ratio: 16 / 10;
    overflow: hidden;
  }

  .work-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .work-card:hover .work-image {
    transform: scale(1.05);
  }

  .work-image-wrapper video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .work-card:hover video {
    opacity: 1;
  }

  /* Work Info */
  .work-info {
    padding: 1.25rem;
  }

  .work-title {
    font-size: 1.25rem;
    font-weight: 500;
    margin: 0 0 0.5rem 0;
  }

  .work-description {
    font-size: 0.9rem;
    color: rgba(255,255,255,0.7);
    margin: 0 0 1rem 0;
    line-height: 1.5;
  }

  /* Tags */
  .work-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    font-size: 0.75rem;
    padding: 0.25rem 0.6rem;
    background: rgba(255,255,255,0.1);
    border-radius: 4px;
    color: rgba(255,255,255,0.8);
  }
</style>
